{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["ES2021", "dom", "dom.iterable"],
    "module": "esNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "./dist",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2021",
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "baseUrl": "./",
    "skipLibCheck": true //NOTE: needed to avoid types collisions from different third party libraries
  },
  "exclude": ["node_modules"],
  "include": ["components"]
}
